% variadic chair block
\newcommand{\chairchecknextarg}{%
	\@ifnextchar\bgroup{\chairgobblenext}{}%
}%

\newcommand{\chairgobblenext}[1]{%
	\titlerow{#1}\@ifnextchar\bgroup{\chairgobblenext}{%
		\signline%
		\titlerow{Date}%
	}%
}%

\newcommand*{\chair}[1]{%
